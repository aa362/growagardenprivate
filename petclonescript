local Workspace = game:GetService("Workspace")
local StarterGui = game:GetService("StarterGui")

local function printToChat(text)
	StarterGui:SetCore("ChatMakeSystemMessage", {
		Text = text,
		Color = Color3.fromRGB(255, 255, 0),
		Font = Enum.Font.SourceSansBold,
		FontSize = Enum.FontSize.Size18
	})
end

-- 特定のモデルが現れたら全て出力
Workspace.DescendantAdded:Connect(function(obj)
	if obj:IsA("Model") and string.find(obj.Name:lower(), "raccoon") then
		task.wait(0.5)
		printToChat("🔍 構造解析開始: " .. obj.Name)
		for _, part in ipairs(obj:GetDescendants()) do
			if part:IsA("Instance") then
				local path = part:GetFullName()
				local class = part.ClassName
				local info = "[" .. class .. "] " .. path
				printToChat(info)
			end
		end
	end
end)
