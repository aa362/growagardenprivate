local Workspace = game:GetService("Workspace")

Workspace.ChildAdded:Connect(function(child)
    if child:IsA("Model") then
        print("ğŸŸ¢ ãƒ¢ãƒ‡ãƒ«å‡ºç¾:", child.Name)

        -- å‡ºç¾ã—ãŸãƒ¢ãƒ‡ãƒ«ã®æ§‹é€ ã‚’è©³ã—ãå‡ºåŠ›
        task.wait(0.5) -- å°‘ã—å¾…ã£ã¦ã‹ã‚‰èµ°æŸ»

        print("â–¼â–¼â–¼", child.Name, "Model ã®ä¸­èº« â–¼â–¼â–¼")

        for _, part in ipairs(child:GetDescendants()) do
            if part:IsA("BasePart") or part:IsA("Decal") or part:IsA("Texture") or part:IsA("SpecialMesh") then
                local info = "[" .. part.ClassName .. "] " .. part:GetFullName()

                if part:IsA("MeshPart") then
                    info = info .. " | TextureID: " .. tostring(part.TextureID)
                elseif part:IsA("Decal") or part:IsA("Texture") or part:IsA("SpecialMesh") then
                    info = info .. " | TextureID: " .. tostring(part.Texture)
                end

                print(info)
            end
        end

        print("â–²â–²â–²", child.Name, "ã®æ§‹é€ ã“ã“ã¾ã§ â–²â–²â–²")
    end
end)
