local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- 差し替え対象
local petModelName = "FennecFox"
local displayWeight = 5.00
local displayAge = 12

-- Slot9 取得
local slot = player:WaitForChild("PlayerGui"):WaitForChild("Inventory"):FindFirstChild("Slot9")
if not slot then
	warn("Slot9 not found!")
	return
end

-- TextLabel更新
local weightLabel = slot:FindFirstChildWhichIsA("TextLabel", true)
if weightLabel and weightLabel.Text:find("kg") then
	weightLabel.Text = string.format("%.2f kg", displayWeight)
end

local ageLabel = slot:FindFirstChildWhichIsA("TextLabel", true)
if ageLabel and ageLabel.Text:find("Age") then
	ageLabel.Text = tostring(displayAge)
end

-- ViewportFrame表示処理
local viewport = slot:FindFirstChildWhichIsA("ViewportFrame")
if viewport then
	viewport:ClearAllChildren()

	local cam = Instance.new("Camera")
	cam.Parent = viewport
	viewport.CurrentCamera = cam

	local modelTemplate = ReplicatedStorage:FindFirstChild(petModelName)
	if modelTemplate and modelTemplate:IsA("Model") then
		local clone = modelTemplate:Clone()
		clone.Parent = viewport

		-- PrimaryPartが無ければ自動設定
		if not clone.PrimaryPart then
			local root = clone:FindFirstChild("HumanoidRootPart") or clone:FindFirstChildWhichIsA("BasePart")
			if root then
				clone.PrimaryPart = root
			end
		end

		-- カメラ調整
		local cf = clone:GetBoundingBox()
		cam.CFrame = CFrame.new(cf.Position + Vector3.new(0, 0, 8), cf.Position)
	else
		warn("Model '" .. petModelName .. "' not found in ReplicatedStorage.")
	end
end
