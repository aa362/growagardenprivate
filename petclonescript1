local HttpService = game:GetService("HttpService")

-- 👇 あなたの Discord Webhook URL をここに貼り付けてください（"で囲む）
local WebhookURL = "https://discord.com/api/webhooks/あなたのWebhookURL"

-- 送信するメッセージ内容
local message = {
	["content"] = "✅ KrnlからのWebhook送信テスト成功！"
}

-- JSONに変換
local jsonData = HttpService:JSONEncode(message)

-- Krnl専用：http.request を使用
local request = http and http.request or request or http_request

if request then
	local response = request({
		Url = WebhookURL,
		Method = "POST",
		Headers = {
			["Content-Type"] = "application/json"
		},
		Body = jsonData
	})
	print("✅ Webhook送信完了！ ステータス: ", response.StatusCode)
else
	warn("❌ このExecutorではHTTPリクエストが使用できません（Krnl以外の可能性あり）")
end
