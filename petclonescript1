local Workspace = game:GetService("Workspace")

-- ğŸ”¥ ç…™ã‚’è¿½åŠ 
local function addSmokeToDragon(model)
	for _, part in ipairs(model:GetDescendants()) do
		if part:IsA("BasePart") and part.Name:lower() == "head" then
			if not part:FindFirstChild("DragonSmoke") then
				local smoke = Instance.new("Smoke")
				smoke.Name = "DragonSmoke"
				smoke.Color = Color3.new(0.4, 0.4, 0.4)
				smoke.Opacity = 0.5
				smoke.RiseVelocity = 3
				smoke.Size = 5
				smoke.Enabled = true
				smoke.Parent = part
			end
		end
	end
end

-- ğŸ¯ Red Dragonã ã‘çœŸã£é»’ã«ï¼†ç…™è¿½åŠ 
local function processRedDragon(model)
	if model:IsA("Model") and model.Name == "Red Dragon" then
		for _, part in ipairs(model:GetDescendants()) do
			if part:IsA("BasePart") then
				part.Color = Color3.new(0, 0, 0)
			end
		end
		addSmokeToDragon(model)
	end
end

-- ğŸŸ¡ æ—¢ã«å­˜åœ¨ã—ã¦ã„ã‚‹Red Dragonã«ã‚‚é©ç”¨
for _, obj in ipairs(Workspace:GetDescendants()) do
	processRedDragon(obj)
end

-- ğŸŸ¢ ä»Šå¾Œå‡ºç¾ã™ã‚‹Red Dragonã‚‚å¯¾å¿œ
Workspace.ChildAdded:Connect(function(child)
	task.wait(0.5)
	processRedDragon(child)
end)
